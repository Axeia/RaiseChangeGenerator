<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<TargetFramework>netstandard2.0</TargetFramework>
		<LangVersion>latest</LangVersion>
		<EnforceExtendedAnalyzerRules>true</EnforceExtendedAnalyzerRules>
		<Nullable>enable</Nullable>

		<!-- NuGet Package Metadata -->
		<PackageId>RaiseChangeGenerator</PackageId>
		<Version>1.0.0</Version>
		<Authors>Pascal Bakhuis</Authors>
		<Description>Source generator for automatic ReactiveUI property change notification</Description>
		<PackageTags>roslyn;source-generator;reactiveui;code-generation</PackageTags>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<RepositoryUrl>https://github.com/Axeia/RaiseChangeGenerator</RepositoryUrl>
		
		<!-- Critical for packaging -->
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<IncludeBuildOutput>true</IncludeBuildOutput>
	</PropertyGroup>
	
	<ItemGroup>
		<PackageReference Include="Microsoft.CodeAnalysis.CSharp" PrivateAssets="all" Version="4.3.0" />
	</ItemGroup>
	
	<!-- Pack the generator as an analyzer -->
	<ItemGroup>
		<None Include="$(OutputPath)\$(AssemblyName).dll" Pack="true" PackagePath="analyzers/dotnet/cs" Visible="false" />
	</ItemGroup>
</Project>